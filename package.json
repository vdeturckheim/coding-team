{
  "name": "coding-team",
  "type": "module",
  "version": "1.0.0",
  "description": "An opinionated tool built on top of Claude Code that orchestrates a team of AI developers",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && vite build",
    "build:main": "tsc",
    "build:renderer": "vite build",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "tsc && NODE_ENV=development electron . --enable-logging",
    "dev:renderer": "vite",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "tsc -p tests/tsconfig.json && node --test --experimental-test-coverage dist/tests/services/*.test.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome check --formatter-enabled=true --linter-enabled=false .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,json}": ["biome check --write"]
  },
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.53.0",
    "@types/node": "^24.0.1",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-vite": "^3.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "postcss": "^8.5.5",
    "tailwindcss": "^4.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.22",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.515.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1"
  }
}
